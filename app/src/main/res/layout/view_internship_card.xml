<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="여름인턴"
            android:layout_alignParentLeft="true"
            android:background="@drawable/background_10px_rectangle"
            android:padding="4dp"
            android:layout_centerVertical="true"
            android:textColor="@color/color_white"/>

        <TextView
            android:id="@+id/endDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8월 31일 마감"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textColor="@color/color_black100"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/job_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="안드로이드 프로그래머"
            android:textColor="@color/color_black100"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

        <TextView
            android:id="@+id/company_name"
            android:layout_below="@+id/job_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 우아한 형제들 X 코드스쿼드"
            android:textColor="@color/color_point"
            android:textSize="14dp"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/ic_company"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/job_description"
            android:layout_below="@id/company_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="신입 안드로이드 프로그래머를 찾습니다."
            android:textColor="@color/color_black100"
            android:textSize="12dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:layout_marginTop="32dp"
        android:background="@color/black_overlay_33"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인턴십 더보기"
            android:textColor="@color/color_black100"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"/>
    </RelativeLayout>
</LinearLayout>